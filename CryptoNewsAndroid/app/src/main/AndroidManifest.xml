<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.princess.android.cryptonews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newslist.view.activity.LatestNewsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".newswebsite.view.ui.NewsWebPageActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".newslist.view.activity.LatestNewsActivity" />
        </activity>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".newslist.view.activity.LatestNewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".newslist.view.activity.LatestNewsActivity" />
        </activity>
    </application>

</manifest>